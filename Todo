import tkinter as tk
from tkinter import messagebox, simpledialog

root = tk.Tk()
root.title("To-Do List App")
root.geometry("400x450")
root.config(bg="#1e1e1e")


def add_task():
    task = task_entry.get()
    if task.strip() == "":
        messagebox.showwarning("Warning", "Please enter a task.")
    else:
        task_listbox.insert(tk.END, task)
        task_entry.delete(0, tk.END)

def delete_task():
    selected = task_listbox.curselection()
    if not selected:
        messagebox.showwarning("Warning", "Select a task to delete.")
    else:
        task_listbox.delete(selected)

def edit_task():
    selected = task_listbox.curselection()
    if not selected:
        messagebox.showwarning("Warning", "Select a task to edit.")
    else:
        current_task = task_listbox.get(selected)
        new_task = simpledialog.askstring("Edit Task", "Modify your task:", initialvalue=current_task)
        if new_task:
            task_listbox.delete(selected)
            task_listbox.insert(selected, new_task)

def clear_all():
    if messagebox.askyesno("Confirm", "Delete all tasks?"):
        task_listbox.delete(0, tk.END)



title_label = tk.Label(root, text="To-Do List", bg="#1e1e1e", fg="white", font=("Arial", 18, "bold"))
title_label.pack(pady=10)

task_entry = tk.Entry(root, font=("Arial", 14))
task_entry.pack(pady=10, padx=20, fill=tk.X)


button_frame = tk.Frame(root, bg="#1e1e1e")
button_frame.pack(pady=10)

add_button = tk.Button(button_frame, text="Add Task", command=add_task, bg="#4CAF50", fg="white", width=12)
add_button.grid(row=0, column=0, padx=5, pady=5)

edit_button = tk.Button(button_frame, text="Edit Task", command=edit_task, bg="#FF9800", fg="white", width=12)
edit_button.grid(row=0, column=1, padx=5, pady=5)

delete_button = tk.Button(button_frame, text="Delete Task", command=delete_task, bg="#F44336", fg="white", width=12)
delete_button.grid(row=1, column=0, padx=5, pady=5)

clear_button = tk.Button(button_frame, text="Clear All", command=clear_all, bg="#9C27B0", fg="white", width=12)
clear_button.grid(row=1, column=1, padx=5, pady=5)


task_listbox = tk.Listbox(root, font=("Arial", 14), selectmode=tk.SINGLE, bg="#2c2c2c", fg="white", height=10)
task_listbox.pack(pady=10, padx=20, fill=tk.BOTH, expand=True)


root.mainloop()